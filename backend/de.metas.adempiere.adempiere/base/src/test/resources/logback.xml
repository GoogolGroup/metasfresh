<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- NOTE: usually method name and line shall be avoided because they are expensive, but in testing we don't care so much about that -->
            <pattern>[%-5level] %logger{0}.%M:%line - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
